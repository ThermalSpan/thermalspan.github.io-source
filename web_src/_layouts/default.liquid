{% include '_includes/env.liquid' %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width initial-scale=1">
        {% if is_post %}
        <title>{{ title }}</title>
        {% else %}
        <title>Cobalt.rs Blog</title>
        {% endif %}
        <meta name="description" content="{{ description }}">
        <link rel="stylesheet" href="{{ "/css/style.css" | prepend: base_url}}">
        {% unless is_post %}
        <style>
        html { 
          background: #000000 url(../images/nebula2.jpg) no-repeat center center fixed; 
          -webkit-background-size: cover;
          -moz-background-size: cover;
          -o-background-size: cover;
          background-size: cover;
          color: #242729;
          font-family: Times-Bold, Serif;
        }
        </style>
        {% endunless %}
    </head>
    <body>
        {% unless is_post %}
        {% include '_includes/image_header.liquid' %}
        {% endunless %}
        <div id="menu" class="dark-div">
        <div id="menu-box">
            <ul>
                <li>
                    <a href="{{ base_url }}">Home</a>
                </li>
                <li>
                    <a href="{{ base_url }}">Docs</a>
                </li>
                <li>
                    <a href="{{ base_url }}">Projects</a>
                </li>
                <li>
                    <a href="{{ base_url }}/contact/">Contact</a>
                </li>
            </ul>
        </div>
        </div>
        <div class="full-div"> 
        <div id="content">
            {% if is_post %}
            {% include '_layouts/post.liquid' %}
            {% else %}
            {{ content }}
            {% endif %}
        </div>
        </div>
    </body>
</html>
